<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %5p [%-20c{1}] %m%n" />
		</layout>
	</appender>

	<appender name="videoLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/r7/logs/tomcat/videos.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %5p [%-20c{1}] %m%n" />
		</layout>
	</appender>

	<category name="org.vraptor">
		<priority value="WARN" />
		<appender-ref ref="stdout" />
	</category>

	<category name="com.thoughtworks">
		<priority value="INFO" />
		<appender-ref ref="stdout" />
	</category>

	<category name="br.com.caelum.vraptor">
		<priority value="WARN" />
		<appender-ref ref="stdout" />
	</category>

	<category name="org.quartz">
		<priority value="WARN" />
		<appender-ref ref="stdout" />
	</category>

	<category name="org.pojongo">
		<priority value="DEBUG" />
		<appender-ref ref="stdout" />
	</category>
	

	<category name="com.r7">
		<priority value="DEBUG" />
		<appender-ref ref="stdout" />
	</category>

</log4j:configuration>
